<h1>管理画面のユーザ一覧画面</h1>

<%= link_to "ユーザ新規登録",new_admin_user_path, class: "btn btn-primary" %>

<table>
  <ul>
    <tr>
      <th><%= "ユーザID" %></th>
      <th><%= "ユーザ名" %></th>
      <th><%= "ユーザ登録日" %></th>
      <th><%= "タスク数" %></th>
      <th><%= "管理者権限" %></th>
    </tr>
    <tbody class='user_row'>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= user.tasks.count %></td>
          <% if user.admin %>
            <td><%= "あり" %></td>
          <% else %>
            <td><%= "なし"%></td>
          <% end %>
          <td><%= link_to t("view.link_to.edit"), edit_admin_user_path(user.id), class: "btn btn-outline-secondary" %></td>
          <td><%= link_to t("view.link_to.destroy"), admin_user_path(user.id), method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </ul>
</table>