<h1><%= t("admin.user_index") %></h1>


<%= link_to t("admin.user_new"), new_admin_user_path, class: "btn btn-primary" %>

<table>
  <ul>
    <tr>
      <th><%= t("view.task.user_id") %></th>
      <th><%= t("view.task.user_name") %></th>
      <th><%= t("view.task.created_at") %></th>
      <th><%= t("view.task.count") %></th>
      <th><%= t("admin.administrator") %></th>
    </tr>
    <tbody class='user_row'>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= user.tasks.count %></td>
          <% if user.admin %>
            <td><%= t("admin.administrator_yes") %></td>
          <% else %>
            <td><%= t("admin.administrator_no") %></td>
          <% end %>
          <td><%= link_to t("view.link_to.edit"), edit_admin_user_path(user.id), class: "btn btn-outline-secondary" %></td>
          <td><%= link_to t("view.link_to.destroy"), admin_user_path(user.id), method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </ul>
</table>